<Window x:Class="Server_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Output log" VerticalAlignment="Top" Height="215" Width="148" Background="#FFE2E1E1"/>
        <Button x:Name="button" Content="Start server" HorizontalAlignment="Left" Margin="10,249,0,0" VerticalAlignment="Top" Width="148" Click="button_Click"/>
        <Button x:Name="button1" Content="Stop server" HorizontalAlignment="Left" Margin="10,289,0,0" VerticalAlignment="Top" Width="148" Click="button1_Click" IsEnabled="False"/>

    </Grid>
</Window>
